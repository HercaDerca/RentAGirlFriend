<div class="container card-container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% @girlfriends.each do |girlfriend| %>
          <div class="col">
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
              <div class="card-body">
                <p class="card-text"><%= girlfriend.name %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "details", girlfriend_path(girlfriend),class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                  <small class="text-body-secondary"><%= girlfriend.hourly_rate %>/hour</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
</div>
