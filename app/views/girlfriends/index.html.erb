<div class="container card-container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% @girlfriends.each do |girlfriend| %>
          <div class="col">
            <div class="card shadow-sm">
            <%= image_tag(url_for(girlfriend.photo), class: "img-fluid") if girlfriend.photo.attached? %>
              <div class="card-body">
                <p class="card-text"><%= girlfriend.name %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "details", girlfriend_path(girlfriend),class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                  <small class="text-body-secondary"><%= girlfriend.hourly_rate %>/hour</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Girlfriend Info</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= simple_form_for @girlfriend do |f| %>
                        <%= f.input :name %>
                        <%= f.input :bio %>
                        <%= f.input :age %>
                        <%= f.input :photo, as: :file %>
                        <hr>
                        <%= f.input :hourly_rate %>
                        <%= f.input :location %>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <%= f.submit "Send offer", class: "btn btn-primary" %>
                      </div>
                    </div>
              <% end %>
          </div>
        </div>
      </div>
</div>
