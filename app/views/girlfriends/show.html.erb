<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(  <%=  @girlfriend.photo.url%>);">
  <div class="container">
    <h1><%= @girlfriend.name %></h1>
    <p><%= @girlfriend.bio %></p>
  </div>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col">
      1 of 2
      <div class="card text-position">
        <div class="card-body">
          <h2>Location:<strong> <%= @girlfriend.location %></strong></h2>
          <hr>
          <h2>Age:<strong> <%= @girlfriend.age %></strong></h2>
          <hr>
          <h2>Hourly Rate:<strong> <%= @girlfriend.hourly_rate %></strong></h2>
        </div>
      </div>
    </div>
    <div class="col">
      2 of 2

      <div class="card text-position">

        <div class="card-body">
        <h3>Booking a date with <strong><%= @girlfriend.name %></strong> means that you agree to our <strong>terms and conditions</strong> as they are listed here</h3>
        <button type="button" class="btn btn-primary modal-show" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Book a date
        </button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <%= simple_form_for [@girlfriend, @offer] do |f| %>
      <div class="modal-content">

        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :date_offered %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= f.submit "Send offer", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
